# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cybersecurity_platform
DB_NAME=cybersecurity_platform

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Email Configuration (for notifications and MFA)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@cybersecurity-platform.com

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key-here
SESSION_COOKIE_MAX_AGE=86400000

# Security Headers
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Compliance Settings
NIST_FRAMEWORK_VERSION=2.0
CISA_CPG_VERSION=2024
AUDIT_RETENTION_DAYS=2555